            <div class="tab-pane fade show active" id="tab-iprange" role="tabpanel">
                <div class="card-body">
                    <h2>
                        {{ 'IP Ranges' | trans }}
                    </h2>
                </div>
                <div class="card-body">
                    {% set ipranges = admin.serviceproxmox_service_get_ip_ranges() %}
                    <div style="padding: 0.25rem 1.5rem">
                        <strong>
                            All IP Ranges
