        </li>
        <li class="nav-item" role="presentation">
            <a class="nav-link" href="#tab-ipam-settings" data-bs-toggle="tab">
                {{ 'IPAM Settings' | trans }}
            </a>
        </li>
    </ul>

    <div class="card">
